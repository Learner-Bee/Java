package com.lily.file;

import java.io.*;

public class InputStreamDemo {

	public static void main(String[] args) {
		try{
		File f=new File("test2.txt");
		InputStream in=new FileInputStream(f);
		byte[] b=new byte[1000];
		int a;
		while((a=in.read(b))>0){
			System.out.print(a);
		}
		in.close();
		}catch(Exception e){}

	}

}
