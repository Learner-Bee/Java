package com.lily.internet;

import java.net.MalformedURLException;
import java.net.URL;

/**
 * 解析URL
 * 通过URL的一些方法，获取URL地址的相关信息
 * @author Administrator
 *
 */
public class URLResolve {

	public static void main(String[] args) throws Exception {
		URL url=new URL("http://www.runoob.com/html/html-tutorial.html");
		System.out.println("URL："+url);
		System.out.println("协议："+url.getProtocol());
		System.out.println("文件名："+url.getFile());
		System.out.println("主机："+url.getHost());
		System.out.println("路径："+url.getPath());
		System.out.println("端口号："+url.getPort());//-1为未设置
		System.out.println("默认端口号："+url.getDefaultPort());
		
	}
	
}
